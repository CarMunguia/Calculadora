<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".MainActivity">||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||

    <TextView
        android:id="@id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="2dp"
        android:text=""
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@id/btnentre"
        android:gravity="right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#605D5D"
        android:textSize="40sp"

        android:background="@drawable/btn_circle_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintRight_toLeftOf="@id/btn2"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        android:text="1"
      />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#605D5D"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintRight_toLeftOf="@id/btn3"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        android:text="2"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_circle_default"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintRight_toLeftOf="@id/btnmas"
        app:layout_constraintBottom_toTopOf="@id/btnpunto"
        android:text="3"
         />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintRight_toLeftOf="@id/btn5"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        android:text="4"
         />
    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintRight_toLeftOf="@id/btn6"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        android:text="5"
         />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintRight_toLeftOf="@id/btnmenos"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        android:text="6"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnac"
        app:layout_constraintRight_toLeftOf="@id/btn8"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        android:text="7"
         />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btnmasmenos"
        app:layout_constraintRight_toLeftOf="@id/btn9"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        android:text="8"
        />
    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btnporcentaje"
        app:layout_constraintRight_toLeftOf="@id/btnpor"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        android:text="9"
         />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:background="@drawable/cero"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintRight_toLeftOf="@id/btnpunto"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0"

         />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_circle_default"
        android:textSize="40sp"
        android:backgroundTint="#605D5D"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintRight_toLeftOf="@id/btnigual"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="."
        />
    <Button
        android:id="@+id/btnigual"
        android:backgroundTint="#F9D403"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_circle_default"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btnpunto"
        app:layout_constraintTop_toBottomOf="@id/btnmas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="="
        />

    <Button
        android:id="@+id/btnmas"
        android:backgroundTint="#F9D403"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnmenos"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintBottom_toTopOf="@id/btnigual"
        android:text="+"
       />
    <Button
        android:id="@+id/btnmenos"
        android:backgroundTint="#F9D403"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btnpor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnmas"
        android:text="-"
         />

    <Button
        android:id="@+id/btnmasmenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:backgroundTint="#BFBCBC"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintRight_toLeftOf="@id/btnporcentaje"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/btnac"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        android:text="+/-"
         />

    <Button
        android:id="@+id/btnpor"
        android:backgroundTint="#F9D403"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_circle_default"
        android:textSize="40sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnentre"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintBottom_toTopOf="@id/btnmenos"
        android:text="*"
         />

    <Button
        android:id="@+id/btnentre"
        android:backgroundTint="#F9D403"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/btnporcentaje"
        app:layout_constraintBottom_toTopOf="@id/btnpor"
        android:text="/"
         />
    <Button
        android:id="@+id/btnporcentaje"
        android:backgroundTint="#BFBCBC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="@drawable/btn_circle_default"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/btnmasmenos"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintRight_toLeftOf="@id/btnentre"
        app:layout_constraintBottom_toTopOf="@id/btn9"
        android:text="%"
         />

    <Button
        android:id="@+id/btnac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/btn_circle_default"
        android:backgroundTint="#C5C5C4"
        android:text="AC"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnmasmenos"
        app:layout_constraintTop_toBottomOf="@id/text" />




</androidx.constraintlayout.widget.ConstraintLayout>